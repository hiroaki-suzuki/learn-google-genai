{
    "name": "Learn google-genai",
    "build": {
        "dockerfile": "./Dockerfile"
    },
    "runArgs": [
        "--name",
        "learn-google-genai-devcontainer"
    ],
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2.5.6": {
            "configureZshAsDefaultShell": true
        },
        "ghcr.io/devcontainer-community/devcontainer-features/astral.sh-uv:1": {
            "version": "0.9.30",
            "shellautocompletion": true
        },
        "ghcr.io/devcontainers/features/node:1.7.1": {
            "version": "24.13.0"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "-github.copilot-chat",
                "-ms-python.autopep8",
                "-ms-python.vscode-pylance",
                "-ms-python.vscode-python-envs",
                "anthropic.claude-code",
                "astral-sh.ty",
                "charliermarsh.ruff",
                "codezombiech.gitignore",
                "eamodio.gitlens",
                "google.gemini-cli-vscode-ide-companion",
                "google.geminicodeassist",
                "mhutchie.git-graph",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "njpwerner.autodocstring",
                "openai.chatgpt",
                "ryu1kn.partial-diff",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "tyriar.sort-lines",
                "wayou.vscode-todo-highlight",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "remoteUser": "vscode",
    "containerEnv": {
        "TZ": "Asia/Tokyo",
        "LANG": "ja_JP.UTF-8",
        "LC_ALL": "ja_JP.UTF-8",
        "UV_ENV_FILE": ".env",
        "UV_LINK_MODE": "copy",
        "CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
    },
    "mounts": [
        "type=volume,source=claude-code-config-${devcontainerId},target=/home/vscode/.claude",
        "type=volume,source=gemini-cli-config-${devcontainerId},target=/home/vscode/.gemini",
        "type=volume,source=codex-config-${devcontainerId},target=/home/vscode/.codex",
        "type=bind,source=${localEnv:HOME}/.claude/settings.json,target=/home/vscode/.claude/settings.json,consistency=cached",
        "type=bind,source=${localEnv:HOME}/.claude/statusline-command.sh,target=/home/vscode/.claude/statusline-command.sh,consistency=cached"
    ],
    "onCreateCommand": "chmod +x .devcontainer/post-create.sh",
    "postCreateCommand": "bash .devcontainer/post-create.sh"
}