{
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "python.defaultInterpreterPath": "${workspaceFolder}/app/.venv/bin/python",
    "python.languageServer": "None",
    "ruff.path": [
        "${workspaceFolder}/app/.venv/bin/ruff"
    ],
    "ruff.configuration": "${workspaceFolder}/app/ruff.toml",
    "ty.path": [
        "${workspaceFolder}/app/.venv/bin/ty"
    ],
    "ty.configurationFile": "${workspaceFolder}/app/ty.toml",
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-containers",
        "editor.quickSuggestions": {
            "strings": true
        }
    },
    "cSpell.words": [
        "autopep",
        "BLEU",
        "catppuccin",
        "charliermarsh",
        "codezombiech",
        "dbaeumer",
        "debugpy",
        "eamodio",
        "fdisk",
        "foxundermoon",
        "geminicodeassist",
        "genai",
        "getenv",
        "isort",
        "langchain",
        "langsmith",
        "mhutchie",
        "netcat",
        "netrc",
        "njpwerner",
        "pathlib",
        "pycodestyle",
        "Pydantic",
        "pyflakes",
        "pypirc",
        "pyproject",
        "pytest",
        "pyupgrade",
        "Shawshank",
        "shellautocompletion",
        "statusline",
        "tamasfe",
        "Totoro",
        "trixie",
        "trulens",
        "tyriar",
        "wayou",
        "yazi",
        "yzhang"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
    }
}